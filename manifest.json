{
    "manifest_version": 3,
    "name": "Udemy Chrome Extension",
    "version": "1.0",
    "description": "Udemy Chrome extension",
    "permissions": ["tabs"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.udemy.com/course/*/learn/quiz/*"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "host_permissions": [
        "https://www.udemy.com/course/*/learn/quiz/*"
    ]
}